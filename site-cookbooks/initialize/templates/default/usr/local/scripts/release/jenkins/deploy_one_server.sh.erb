# シェルのファイル名と同じログを自動生成
EXEC_FULLPATH=`readlink -f $0`
BASENAME=${EXEC_FULLPATH##*/}
#BASENAME=`basename $0`
BASEDIRNAME=${EXEC_FULLPATH%/*}
LOG_DIRNAME=`echo $BASEDIRNAME |sed s%/usr/local/scripts%/var/log/usrlogs%g`
LOG_FILE="$LOG_DIRNAME/$BASENAME.log"

if [ ! -d $LOG_DIRNAME ]; then
    mkdir $LOG_DIRNAME
fi
echo "#####start args=$@ `date '+%Y/%m/%d %T'`#####" >> $LOG_FILE 2>&1
#ここに追加したい処理を記述してください。
SERVICE_NAME=$1
TAR_NAME=$2
FIRST_RELEASE=$3

cd /app
if [ ! -d $SERVICE_NAME ] && [ $FIRST_RELEASE = false ]; then
  echo
  echo Error : app $SERVICE_NAME not found
  echo
  exit 1;
fi

echo "pull backup file"
scp -p <%= node.normal['release']['from'] %>:/app.backup/$TAR_NAME /app.backup/
ls -l /app.backup/$TAR_NAME

echo "deploy to one server"
cd /app ; tar xvzf /app.backup/$TAR_NAME || echo "error ignoring"
/etc/init.d/httpd graceful

echo "#####end   args=$@ `date '+%Y/%m/%d %T'`#####" >> $LOG_FILE 2>&1


